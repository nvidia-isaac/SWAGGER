<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>compass_swagger_navigator</name>
  <version>0.1.0</version>
  <description>ROS2 node for robot navigation, using COMPASS policy and SWAGGER for route generation</description>
  <maintainer email="isaac-swagger-maintainers@nvidia.com">Isaac SWAGGER Maintainers</maintainer>
  <license>Apache 2.0</license>

  <depend>geometry_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>nav_msgs</depend>
  <depend>rclpy</depend>
  <depend>python3-numpy</depend>
  <depend>python3-torch</depend>
  <depend>swagger_nav2_bringup</depend>

  <test_depend>ament_copyright</test_depend>
  <test_depend>ament_flake8</test_depend>
  <test_depend>ament_pep257</test_depend>
  <test_depend>python3-pytest</test_depend>

  <export>
    <build_type>ament_python</build_type>
  </export>
</package>
